{{#each countries}}
  <li
    class='country-list__item'
    style='display: flex; align-items: center; margin-bottom: 14px;'
  >
    <img
      src='{{flags.svg}}'
      alt='Flag {{name.official}}'
      width='50'
      style='margin-right: 15px;'
    />
    <p
      style='font-size:18px; font-weight:400;line-height: 1.14;'
    >{{name.official}}</p>

  </li>
{{/each}}